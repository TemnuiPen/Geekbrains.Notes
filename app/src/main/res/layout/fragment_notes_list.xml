<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.NotesListFragment">

    <EditText
        android:layout_marginTop="@dimen/spacing_small_8"
        android:background="@drawable/search_rectangle"
        android:id="@+id/search_notes"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/star_size"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </EditText>

    <ImageButton
        android:layout_marginTop="@dimen/spacing_small_8"
        android:id="@+id/btn_settings"
        android:layout_width="@dimen/spacing_very_huge_40"
        android:layout_height="@dimen/spacing_very_huge_40"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@id/search_notes"
        android:background="@drawable/ic_baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/note_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/search_notes">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>